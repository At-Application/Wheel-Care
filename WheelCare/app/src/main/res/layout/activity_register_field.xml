<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context="com.example.lenovo.wheelcare.RegisterationActicvity">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="21dp"
            android:textColor="@color/btn_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Register with Wheel Care"/>
        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:hint="Full Name"
            android:paddingLeft="5dp"
            android:background="@drawable/custom_edit_box"
            android:textSize="21dp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:maxLength="35"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/text_fullname_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/auto_fill"
            android:textSize="20dp"
            android:visibility="invisible"
            android:maxLines="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This field cannot be left empty!"/>



        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_edit_box"
            android:hint="Email ID"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textSize="21dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center_vertical"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/text_email_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/auto_fill"
            android:maxLines="1"
            android:textSize="20dp"
            android:visibility="invisible"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This field cannot be left empty!"/>

        <EditText
            android:id="@+id/et_referal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_edit_box"
            android:hint="Referral Code(Optional)"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/_8sdp"
            android:textSize="21dp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:maxLength="2005"
            android:maxLines="4"/>
        <TextView
            android:id="@+id/text_referal_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/auto_fill"
            android:maxLines="1"
            android:textSize="15dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Invalid Referral code!"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:textSize="21dp"
            android:background="@drawable/round_edge"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="REGISTER"/>



    </LinearLayout>

</ScrollView>
