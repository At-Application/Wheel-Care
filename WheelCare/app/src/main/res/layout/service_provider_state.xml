<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/vehImage"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:autoPlay="false"
        app:fillColor="#FFFFFFFF"
        app:indicatorGravity="bottom|center_horizontal"
        app:pageColor="#00000000"
        app:radius="3dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shadow"

        android:background="@color/white">

        <TextView
            android:id="@+id/Model"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="Service Provider Name"
            android:textColor="@color/btn_color"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/serviceProviderDistance"
            app:layout_constraintTop_toBottomOf="@+id/Manufacturer" />

        <TextView
            android:id="@+id/ModelName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="2.3kms"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ManuName" />

        <TextView
            android:id="@+id/Type"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="Service Provider Name"
            android:textColor="@color/btn_color"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/serviceProviderDistance"
            app:layout_constraintTop_toBottomOf="@+id/Model" />

        <TextView
            android:id="@+id/TypeName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="2.3kms"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ModelName" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="Service Provider Name"
            android:textColor="@color/btn_color"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/serviceProviderDistance"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="2.3kms"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Manufacturer"
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="Service Provider Name"
            android:textColor="@color/btn_color"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/serviceProviderDistance"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <TextView
            android:id="@+id/ManuName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="2.3kms"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Number" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/vehImage"
        android:background="@drawable/shadow">

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>